{% extends 'base.html.twig' %}

{% block title %}Bienvenue et Sérénité à vous{% endblock %}

{% block body %}



    {% include 'incs/_slider.html.twig' %}

    {# {% include 'incs/promo.html.twig' %} #}
    <section class="row" style="margin-top:15vh; margin-left:20%;">
        <div class="col-12">
            <h2 style="margin-left:25%;">Bienvenue dans notre boutique</h2>
        </div>
        {% for category in categories %}
            {% if category.parent == null %}
                {# <div class="col-12" style="margin-top:15px;">
                    <h2>{{ category.name }}</h2>
                </div> #}
            {% else %}
                <div class=" mb-7 col-md-3 col-sm-5 col-xs-10 me-3" >
                    <div class="card h-100 mb-5" style ="width: 18rem; border: solid 2px black; "> 
                        
                         <img src="{{ asset('assets/images/') ~ category.image }}" class="d-block w-100 h-50" alt="{{ category.name }}" > 
                        <div class="card-body" >
                             <h3 class="card-title mt-5">{{ category.name }}</h3>
                            {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>#}
                            <a href="{{path('categories_list', {slug: category.slug})}}" class="btn btn-primary mx-auto " style="background-color:#9c1bec; ">Voir les produits</a>
                        </div>
                        
                    </div> 
                 
                </div>

            
            {% endif %}    
        {% endfor %}
    </section>   
        
{% endblock %}
