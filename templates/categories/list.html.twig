{% extends "base.html.twig" %}

{% block title %}Liste des produits de la catégorie {{category.name}}{% endblock %}

{% block body %}

    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des produits de la catégorie {{category.name}}</h1>
            </div>
            {% for product in products %}
                <div class="col-3 mb-3">
                    <article class="card h-100">
                        <div class="card-body text-center">
                            <h2 class="card-title">{{product.name}}</h2>
                            <img src="{{asset('assets/upload/fichier/') ~ product.image}}" class="d-block w-100 " alt="">
                            <p class="card-text">{{product.description}}</p>
                            <a href="{{path('products_app_show', {'id': product.id})}} )}}" class="btn btn-primary" style="background-color:#9c1bec;">Voir les détails</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </section>
    
    
    </main>

{%  endblock %}