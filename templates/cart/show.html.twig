{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
.table{
box-sizing: border-box;
margin: 0;
padding: 0;
}
</style>
<section class="bg-light mx-auto  p-3" style="margin-top:10%;" >
    <h1>Votre panier</h1>
</section>


<table class="table  my-5 border border-dark"  style="margin-left:50px; width: 90%;">
    <thead>
        <tr class="head_table bg-gradient-primary ">
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td>{{item.product.name}}</td>
                <td>{{item.product.price}} €</td>
                <td>{{item.qty}}</td>
                <td>{{item.qty * item.product.price}} €</td>
                <td>
                    <a href="{{path("cart_add", {id: item.product.id})}}"
                    class="btn btn-success">
                        <i class="fa-sharp fa-solid fa-cart-plus"></i>
                    </a>
                    <a href="{{path("cart_remove", {id: item.product.id})}}"  class="btn btn-warning">
                        <i class="fa-solid fa-minus"></i>
                    </a>
                    <a href="{{path("cart_delete", {id: item.product.id})}}" class="btn btn-danger">
                        <i class="fa-solid fa-xmark"></i></a>
                </td>
            </tr>   
        {% else %}
            <tr>
                <td colspan="5"  class="text-center">Votre panier est vide</td>
                
            </tr>
        {% endfor %} 
    </tbody> 
    <tfoot>
        <tr>
            <td colspan="3">Total :</td>
            <td>{{total}} €</td>
            <td><a href="{{path('products_index')}}" class="btn btn-secondaire">Poursuivre mes achats</a></td>
        </tr>  
    </tfoot>     
</table>

<a href="#" class="btn btn-primary">Valider mon panier</a>
{% endblock %}
    
     
    
    

