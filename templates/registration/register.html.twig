{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="col fw-bold">

            <h1 class="register-title fw-bold fs-1 mb-3" style="margin-top: 20%;">M'inscrire</h1>

            {{ form_start(registrationForm) }}
                <fieldset>
                    {# <legend>Mon identité</legend> #}
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.email) }}
                    
                </fieldset>
                    
                <fieldset>
                    {# <legend>Mes coordonnées</legend> #}
                    {{ form_row(registrationForm.adress) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.city) }}
                </fieldset>    
                    
                
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn" style="background-color:#9c1bec; color:#f5e6e6">M'insrire</button>
                <a href="{{path('app_login')}}" class="login text-dark fw-bold"> Déjà un compte ? Par <span style="color:#5d69ed;">içi</span></a>
            {{ form_end(registrationForm) }}
        </div>
    </section>    
{% endblock %}

        
        
        
    
    

